{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@application/*": ["application/*"],
      "@infra/*": ["infra/*"],
      "@presentation/*": ["presentation/*"],
      "@main/*": ["main/*"]
    },
    "moduleResolution": "Node",
    "resolveJsonModule": true
  }
}
